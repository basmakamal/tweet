{% trans_default_domain 'FOSUserBundle' %}

<section class="login">
    <h1 class=""> <span>{{ "join"|trans() }}</span> {{ "Tweeter"|trans }} </h1>
    <div class="login-or">
        <div class="container">
            <div class="col-md-12">
                <h2> <span> {{ "request.password"|trans() }} </span> </h2>
                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'login-Register-form fos_user_resetting_reset' } }) }}
                {{ form_widget(form.plainPassword.first,{'attr':{'tabindex':'1','placeholder':"form.password"|trans}}) }}
				{{ form_widget(form.plainPassword.second,{'attr':{'tabindex':'1','placeholder':"form.password_confirmation"|trans}}) }}
                <div>
                    <button type="submit" class="submit" value="{{ 'resetting.reset.submit'|trans }}" >{{ 'resetting.reset.submit'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</section>
